<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SmartbarContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SmartbarQuickAction" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/smartbar_button_margin</item>
        <item name="android:background">@drawable/shape_oval</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:padding">@dimen/smartbar_button_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#000000</item>
    </style>

    <style name="SmartbarQuickAction.PrivateModeButton">
        <item name="android:background">@drawable/shape_rect_rounded</item>
    </style>

    <style name="TextEditingButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/button_transparent_bg_on_press_with_border</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:hapticFeedbackEnabled">false</item>
        <item name="android:scaleType">center</item>
    </style>


    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="MSwitch" parent="AppBaseTheme">
        <item name="thumbTint">@color/thumb_color</item>
        <item name="trackTint">@color/track_color</item>
        <item name="android:fontFamily">@font/roboto_500</item>
    </style>


    <style name="AlterDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="windowMinWidthMajor">95%</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ioskey.iosboard.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="item"
            type="com.ioskey.iosboard.ui.theme.editor.activity.ThemeEditorViewModel.BackgroundAsset.BackgroundTheme" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.ioskey.iosboard.ui.custom.ScalableCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            scaleType="@{ScaleType.BY_HEIGHT}"
            scalableCornerRadius="@{0.0156665f}"
            app:layout_constraintDimensionRatio="157.75:109.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C7C7CC">
                <com.ioskey.iosboard.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="156.05:107.45"
                    app:layout_constraintHeight_percent="0.979"
                    scaleType="@{ScaleType.BY_HEIGHT}"
                    scalableCornerRadius="@{0.008f}"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        image="@{item.uri}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </com.ioskey.iosboard.ui.custom.ScalableCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.ioskey.iosboard.ui.custom.ScalableCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

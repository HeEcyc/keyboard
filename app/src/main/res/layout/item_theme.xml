<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.cccomba.board.ui.custom.ScalableCardView.ScaleType"/>
        <import type="android.view.View"/>
        <import type="com.cccomba.board.data.NewTheme"/>
        <import type="com.cccomba.board.data.KeyboardTheme"/>
        <variable
            name="item"
            type="com.cccomba.board.data.Theme" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cccomba.board.ui.custom.ScalableCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="156:109"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            scaleType="@{ScaleType.BY_HEIGHT}"
            scalableCornerRadius="@{0.05f}"
            android:visibility="@{item instanceof KeyboardTheme ? View.VISIBLE : View.GONE}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    color="@{item instanceof KeyboardTheme ? ((KeyboardTheme)item).backgroundColor : null}"
                    image="@{item instanceof KeyboardTheme ? ((KeyboardTheme)item).backgroundImagePath : null}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <androidx.appcompat.widget.AppCompatImageView
                    previewTheme="@{item instanceof KeyboardTheme ? (KeyboardTheme)item : null}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.cccomba.board.ui.custom.ScalableCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.smard.boart.ui.custom.ScalableCardView.ScaleType"/>
        <import type="android.view.View"/>
        <import type="com.smard.boart.data.NewTheme"/>
        <import type="com.smard.boart.data.KeyboardTheme"/>
        <variable
            name="item"
            type="com.smard.boart.data.Theme" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.smard.boart.ui.custom.ScalableCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="189:132"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            scaleType="@{ScaleType.BY_HEIGHT}"
            scalableCornerRadius="@{0.030303f}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@{item instanceof KeyboardTheme &amp;&amp; ((KeyboardTheme)item).isSelectedObservable ? @drawable/item_keyboard_stroke_selected : @drawable/item_keyboard_stroke}">
                <com.smard.boart.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="185:128"
                    app:layout_constraintHeight_percent="0.969696"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    scaleType="@{ScaleType.BY_HEIGHT}"
                    scalableCornerRadius="@{0.015625f}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="@{!(item instanceof NewTheme) ? View.VISIBLE : View.GONE}">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/toolbar"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintDimensionRatio="185:19.01"
                                android:src="@drawable/image_toolbar"
                                android:background="#292E32"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                                app:layout_constraintBottom_toBottomOf="parent">
                                <androidx.appcompat.widget.AppCompatImageView
                                    color="@{item instanceof KeyboardTheme ? ((KeyboardTheme)item).backgroundColor : null}"
                                    image="@{item instanceof KeyboardTheme ? ((KeyboardTheme)item).backgroundImagePath : null}"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"/>
                                <androidx.appcompat.widget.AppCompatImageView
                                    previewTheme="@{item instanceof KeyboardTheme ? (KeyboardTheme)item : null}"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintHeight_percent="0.205078"
                            android:src="@drawable/ic_new"
                            android:visibility="@{item instanceof NewTheme ? View.VISIBLE : View.GONE}"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.smard.boart.ui.custom.ScalableCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.smard.boart.ui.custom.ScalableCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

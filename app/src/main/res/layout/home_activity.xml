<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="com.gg.osto.R"/>
        <import type="android.view.View"/>
        <import type="com.gg.osto.ui.custom.ScalableCardView.ScaleType"/>
        <import type="com.gg.osto.util.Converter"/>
        <variable
            name="viewModel"
            type="com.gg.osto.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="360:130"
                    android:clipChildren="false">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="184:24"
                        app:layout_constraintHeight_percent="0.1846"
                        app:layout_constraintVertical_bias="0.349"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="22sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/sf_pro_display_700"
                        android:text="@string/collection"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/buttonMenu"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintHeight_percent="0.215"
                        app:layout_constraintVertical_bias="0.343"
                        app:layout_constraintHorizontal_bias="0.9096"
                        android:src="@drawable/ic_options"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="360:38"
                        android:scrollbars="none"
                        android:overScrollMode="never">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="30:39"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <com.gg.osto.ui.custom.ScalableCardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardElevation="0dp"
                                scaleType="@{ScaleType.BY_HEIGHT}"
                                scalableCornerRadius="@{0.5f}"
                                android:onClick="@{(_) -> viewModel.onPresetClick()}">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#010101">
                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHeight_percent="0.9487"
                                        android:orientation="horizontal">
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintDimensionRatio="1:39"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                        <com.gg.osto.ui.custom.ScalableCardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            app:cardElevation="0dp"
                                            app:cardBackgroundColor="@android:color/transparent"
                                            scaleType="@{ScaleType.BY_HEIGHT}"
                                            scalableCornerRadius="@{0.5f}">
                                            <androidx.appcompat.widget.LinearLayoutCompat
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:background="@{viewModel.presetSelected ? @color/black : @color/white}">
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent">
                                                    <View
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        app:layout_constraintStart_toStartOf="parent"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintDimensionRatio="10:37"/>
                                                </androidx.constraintlayout.widget.ConstraintLayout>
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent">
                                                    <com.gg.osto.ui.custom.TrueAutoSizeTextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="0dp"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        app:layout_constraintStart_toStartOf="parent"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintHeight_percent="0.486486486"
                                                        android:gravity="center"
                                                        fontToHeightRatio="@{0.88888888f}"
                                                        android:textColor="@{viewModel.presetSelected ? @color/white : @color/black}"
                                                        android:fontFamily="@font/sf_pro_display_700"
                                                        android:text="@string/trending_themes"/>
                                                </androidx.constraintlayout.widget.ConstraintLayout>
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent">
                                                    <View
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        app:layout_constraintStart_toStartOf="parent"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintDimensionRatio="10:37"/>
                                                </androidx.constraintlayout.widget.ConstraintLayout>
                                            </androidx.appcompat.widget.LinearLayoutCompat>
                                        </com.gg.osto.ui.custom.ScalableCardView>
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintDimensionRatio="1:39"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.appcompat.widget.LinearLayoutCompat>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.gg.osto.ui.custom.ScalableCardView>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="36:39"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <com.gg.osto.ui.custom.ScalableCardView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardElevation="0dp"
                                scaleType="@{ScaleType.BY_HEIGHT}"
                                scalableCornerRadius="@{0.5f}"
                                android:onClick="@{(_) -> viewModel.onCustomClick()}">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#010101">
                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHeight_percent="0.9487"
                                        android:orientation="horizontal">
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintDimensionRatio="1:39"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                        <com.gg.osto.ui.custom.ScalableCardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            app:cardElevation="0dp"
                                            app:cardBackgroundColor="@android:color/transparent"
                                            scaleType="@{ScaleType.BY_HEIGHT}"
                                            scalableCornerRadius="@{0.5f}">
                                            <androidx.appcompat.widget.LinearLayoutCompat
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:background="@{viewModel.customSelected ? @color/black : @color/white}">
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent">
                                                    <View
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        app:layout_constraintStart_toStartOf="parent"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintDimensionRatio="10:37"/>
                                                </androidx.constraintlayout.widget.ConstraintLayout>
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent">
                                                    <com.gg.osto.ui.custom.TrueAutoSizeTextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="0dp"
                                                        app:layout_constraintTop_toTopOf="parent"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        app:layout_constraintStart_toStartOf="parent"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintHeight_percent="0.486486486"
                                                        android:gravity="center"
                                                        fontToHeightRatio="@{0.88888888f}"
                                                        android:textColor="@{viewModel.customSelected ? @color/white : @color/black}"
                                                        android:fontFamily="@font/sf_pro_display_700"
                                                        android:text="@string/your_themes"/>
                                                </androidx.constraintlayout.widget.ConstraintLayout>
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent">
                                                    <View
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        app:layout_constraintStart_toStartOf="parent"
                                                        app:layout_constraintEnd_toEndOf="parent"
                                                        app:layout_constraintDimensionRatio="10:37"/>
                                                </androidx.constraintlayout.widget.ConstraintLayout>
                                            </androidx.appcompat.widget.LinearLayoutCompat>
                                        </com.gg.osto.ui.custom.ScalableCardView>
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintDimensionRatio="1:39"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.appcompat.widget.LinearLayoutCompat>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </com.gg.osto.ui.custom.ScalableCardView>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintDimensionRatio="30:39"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPreset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    adapter="@{viewModel.adapterPreset}"
                    android:visibility="@{viewModel.presetSelected ? View.VISIBLE : View.GONE}"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCustom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    adapter="@{viewModel.adapterCustom}"
                    android:visibility="@{viewModel.customSelected ? View.VISIBLE : View.GONE}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AB010101"
            android:visibility="gone">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="360:777">

                <com.gg.osto.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="350:248"
                    app:layout_constraintWidth_percent="0.97222"
                    app:layout_constraintVertical_bias="0.3119"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{com.gg.osto.ui.custom.ScalableCardView.ScaleType.BY_HEIGHT}"
                    scalableCornerRadius="@{0.05645f}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintDimensionRatio="4736:486"
                            android:src="@drawable/toolbar"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            color="@{viewModel.theme.backgroundColor}"
                            image="@{viewModel.theme.backgroundImagePath}"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="@id/keyboardPreview"
                            app:layout_constraintBottom_toBottomOf="@id/keyboardPreview"
                            android:scaleType="centerCrop" />
                        <com.gg.osto.ime.text.keyboard.TextKeyboardView
                            android:id="@+id/keyboardPreview"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toBottomOf="@id/toolbar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:isPreviewKeyboard="true"
                            bind:buttonColor="@{viewModel.theme.buttonColor}"
                            bind:font="@{viewModel.theme.keyFont}"
                            bind:keyColor="@{viewModel.theme.keyTextColor}"
                            bind:opacity="@{viewModel.theme.opacity}"
                            bind:strokeColor="@{viewModel.theme.strokeColor}"
                            bind:strokeCornerRadius="@{viewModel.theme.strokeRadius}" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.gg.osto.ui.custom.ScalableCardView>

                <com.gg.osto.ui.custom.ScalableCardView
                    android:id="@+id/buttonApply"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="159:70"
                    app:layout_constraintWidth_percent="0.441666666"
                    app:layout_constraintVertical_bias="0.6973"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{ScaleType.BY_HEIGHT}"
                    scalableCornerRadius="@{0.42857f}"
                    android:onClick="@{(_) -> viewModel.apply()}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#010101">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="22sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/sf_pro_display_700"
                            android:text="@string/apply"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.gg.osto.ui.custom.ScalableCardView>

                <com.gg.osto.ui.custom.ScalableCardView
                    android:id="@+id/buttonEdit"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="159:70"
                    app:layout_constraintWidth_percent="0.441666666"
                    app:layout_constraintVertical_bias="0.8387553"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{ScaleType.BY_HEIGHT}"
                    scalableCornerRadius="@{0.42857f}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#010101">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="22sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/sf_pro_display_700"
                            android:text="@string/edit"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.gg.osto.ui.custom.ScalableCardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/buttonCancel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="158:24"
                    app:layout_constraintWidth_percent="0.441666666"
                    app:layout_constraintVertical_bias="0.92"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="22sp"
                    app:autoSizeMinTextSize="1sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/sf_pro_display_700"
                    android:text="@string/cancel"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/applied"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="360:232"
                    app:layout_constraintVertical_bias="0.478899"

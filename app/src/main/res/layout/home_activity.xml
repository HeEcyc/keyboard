<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="com.gg.osto.R"/>
        <import type="android.view.View"/>
        <import type="com.gg.osto.ui.custom.ScalableCardView.ScaleType"/>
        <import type="com.gg.osto.util.Converter"/>
        <variable
            name="viewModel"
            type="com.gg.osto.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="360:118"
                    android:clipChildren="false"
                    android:background="@drawable/bg_gradient_dark">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="160:22"
                        app:layout_constraintHeight_percent="0.18644"
                        app:layout_constraintVertical_bias="0.3229"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/roboto_500"
                        android:textAllCaps="true"
                        android:text="@string/collection"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/buttonMenu"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintHeight_percent="0.338983"
                        app:layout_constraintVertical_bias="0.282"
                        app:layout_constraintHorizontal_bias="0.95"
                        android:src="@drawable/ic_options"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintDimensionRatio="180:40"
                        app:layout_constraintWidth_percent="0.5"
                        android:onClick="@{(_) -> viewModel.onPresetClick()}">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="156:22"
                            app:layout_constraintHeight_percent="0.55"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/gilroy_400"
                            android:alpha="@{viewModel.presetSelected ? 1f : 0.5f}"
                            android:textAllCaps="true"
                            android:text="@string/trending_themes"/>
                        <com.gg.osto.ui.custom.ScalableCardView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="156:4"
                            app:layout_constraintHeight_percent="0.1"
                            app:layout_constraintVertical_bias="0.7777777"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            scaleType="@{ScaleType.BY_HEIGHT}"
                            scalableCornerRadius="@{0.5f}"
                            android:visibility="@{viewModel.presetSelected ? View.VISIBLE : View.GONE}">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintHeight_percent="0.5"
                                    android:background="@android:color/white"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.gg.osto.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="180:40"
                        app:layout_constraintWidth_percent="0.5"
                        android:onClick="@{(_) -> viewModel.onCustomClick()}">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="156:22"
                            app:layout_constraintHeight_percent="0.55"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/gilroy_400"
                            android:alpha="@{viewModel.customSelected ? 1f : 0.5f}"
                            android:textAllCaps="true"
                            android:text="@string/your_themes"/>
                        <com.gg.osto.ui.custom.ScalableCardView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintDimensionRatio="156:4"
                            app:layout_constraintHeight_percent="0.1"
                            app:layout_constraintVertical_bias="0.7777777"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            scaleType="@{ScaleType.BY_HEIGHT}"
                            scalableCornerRadius="@{0.5f}"
                            android:visibility="@{viewModel.customSelected ? View.VISIBLE : View.GONE}">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintHeight_percent="0.5"
                                    android:background="@android:color/white"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.gg.osto.ui.custom.ScalableCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPreset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    adapter="@{viewModel.adapterPreset}"
                    android:visibility="@{viewModel.presetSelected ? View.VISIBLE : View.GONE}"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCustom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    adapter="@{viewModel.adapterCustom}"
                    android:visibility="@{viewModel.customSelected ? View.VISIBLE : View.GONE}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BF010C1D"
            android:visibility="gone">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="360:777">

                <com.gg.osto.ui.custom.ScalableCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="328:213"
                    app:layout_constraintWidth_percent="0.9111"
                    app:layout_constraintVertical_bias="0.418"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{com.gg.osto.ui.custom.ScalableCardView.ScaleType.BY_HEIGHT}"
                    scalableCornerRadius="@{0.0469f}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintDimensionRatio="4736:486"
                            android:src="@drawable/toolbar"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            color="@{viewModel.theme.backgroundColor}"
                            image="@{viewModel.theme.backgroundImagePath}"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="@id/keyboardPreview"
                            app:layout_constraintBottom_toBottomOf="@id/keyboardPreview"
                            android:scaleType="centerCrop" />
                        <com.gg.osto.ime.text.keyboard.TextKeyboardView
                            android:id="@+id/keyboardPreview"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toBottomOf="@id/toolbar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:isPreviewKeyboard="true"
                            bind:buttonColor="@{viewModel.theme.buttonColor}"
                            bind:font="@{viewModel.theme.keyFont}"
                            bind:keyColor="@{viewModel.theme.keyTextColor}"
                            bind:opacity="@{viewModel.theme.opacity}"
                            bind:strokeColor="@{viewModel.theme.strokeColor}"
                            bind:strokeCornerRadius="@{viewModel.theme.strokeRadius}" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.gg.osto.ui.custom.ScalableCardView>

                <com.gg.osto.ui.custom.ScalableCardView
                    android:id="@+id/buttonApply"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="156:52"
                    app:layout_constraintWidth_percent="0.4333"
                    app:layout_constraintVertical_bias="0.702"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{ScaleType.BY_HEIGHT}"
                    scalableCornerRadius="@{0.5f}"
                    android:onClick="@{(_) -> viewModel.apply()}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        setAppGradientBackground="@{true}">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="156:22"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/gilroy_400"
                            android:textAllCaps="true"
                            android:text="@string/apply"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.gg.osto.ui.custom.ScalableCardView>

                <com.gg.osto.ui.custom.ScalableCardView
                    android:id="@+id/buttonEdit"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="156:52"
                    app:layout_constraintWidth_percent="0.4333"
                    app:layout_constraintVertical_bias="0.815"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    scaleType="@{ScaleType.BY_HEIGHT}"
                    scalableCornerRadius="@{0.5f}">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        setAppGradientBackground="@{true}">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="156:22"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="20sp"
                            app:autoSizeMinTextSize="1sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/gilroy_400"
                            android:textAllCaps="true"
                            android:text="@string/edit"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.gg.osto.ui.custom.ScalableCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttonCancel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="156:52"
                    app:layout_constraintWidth_percent="0.4333"
                    app:layout_constraintVertical_bias="0.928">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="156:22"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#FFFFFF"
                        setAppGradientText="@{true}"
                        android:fontFamily="@font/roboto_100"
                        android:text="@string/cancel"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/applied"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="17032:17400"
                    app:layout_constraintWidth_percent="0.473111"
                    app:layout_constraintVertical_bias="0.478899"
                    android:src="@drawable/img_applied"
                    android:visibility="gone"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

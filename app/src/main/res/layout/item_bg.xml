<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.gg.osto.ui.edit.EditViewModel.BackgroundAsset"/>
        <import type="com.gg.osto.util.Converter"/>
        <import type="android.view.View"/>
        <import type="com.gg.osto.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="item"
            type="BackgroundAsset" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="156:189">

            <com.gg.osto.ui.custom.ScalableCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                scaleType="@{ScaleType.BY_WIDTH}"
                scalableCornerRadius="@{0.0641f}"
                android:visibility="@{(item instanceof BackgroundAsset.BackgroundTheme) ? View.VISIBLE : View.GONE}">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    image="@{(item instanceof BackgroundAsset.BackgroundTheme) ? Converter.previewUri((BackgroundAsset.BackgroundTheme)item) : null}" />
            </com.gg.osto.ui.custom.ScalableCardView>

            <com.gg.osto.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="77:52"
                app:layout_constraintWidth_percent="0.49"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                scaleType="@{ScaleType.BY_HEIGHT}"
                scalableCornerRadius="@{0.5f}"
                android:visibility="@{(item instanceof BackgroundAsset.NewImage) ? View.VISIBLE : View.GONE}">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    setAppGradientBackground="@{true}">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="21:52"
                        android:src="@drawable/ic_add"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.gg.osto.ui.custom.ScalableCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

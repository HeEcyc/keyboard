<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.puddy.board.ui.edit.EditViewModel.BackgroundAsset"/>
        <import type="com.puddy.board.util.Converter"/>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="BackgroundAsset" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@android:color/white"
                image="@{(item instanceof BackgroundAsset.BackgroundTheme) ? Converter.previewUri((BackgroundAsset.BackgroundTheme)item) : null}"
                android:visibility="@{(item instanceof BackgroundAsset.BackgroundTheme) ? View.VISIBLE : View.GONE}"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.17"
                app:layout_constraintVertical_bias="0.1121"
                app:layout_constraintHorizontal_bias="0.8879"
                android:src="@drawable/ic_selected"
                android:visibility="@{(item instanceof BackgroundAsset.BackgroundTheme) &amp;&amp; ((BackgroundAsset.BackgroundTheme)item).isSelected ? View.VISIBLE : View.GONE}"/>

            <com.puddy.board.ui.custom.ScalableCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="158:70"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                scaleType="@{com.puddy.board.ui.custom.ScalableCardView.ScaleType.BY_HEIGHT}"
                scalableCornerRadius="@{0.5f}"
                android:visibility="@{(item instanceof BackgroundAsset.NewImage) ? View.VISIBLE : View.GONE}">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#010101">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="86:18"
                        app:layout_constraintHeight_percent="0.257"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/sf_pro_display_700"
                        android:text="@string/add_yours"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.puddy.board.ui.custom.ScalableCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

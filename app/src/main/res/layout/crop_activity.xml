<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="com.puddy.board.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="viewModel"
            type="com.puddy.board.ui.crop.CropViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="360:777">

            <com.puddy.board.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="300:516"
                app:layout_constraintWidth_percent="0.8333"
                app:layout_constraintVertical_bias="0.18"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                scaleType="@{com.puddy.board.ui.custom.ScalableCardView.ScaleType.BY_WIDTH}"
                scalableCornerRadius="@{0.11666666f}">
                <com.isseiaoki.simplecropview.CropImageView
                    android:id="@+id/cropView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    image="@{viewModel.imageUri}"
                    app:scv_background_color="@android:color/transparent"
                    app:scv_crop_mode="free"
                    app:scv_frame_color="@android:color/white"
                    app:scv_guide_color="@android:color/white"
                    app:scv_handle_color="#FFFFFF"
                    app:scv_overlay_color="#80000000"
                    android:background="#383C42"/>
            </com.puddy.board.ui.custom.ScalableCardView>

            <com.puddy.board.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="159:70"
                app:layout_constraintWidth_percent="0.441666666"
                app:layout_constraintVertical_bias="0.8387553"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                scaleType="@{ScaleType.BY_HEIGHT}"
                scalableCornerRadius="@{0.42857f}"
                android:onClick="@{(_) -> viewModel.cropImage(cropView)}">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#010101">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:fontFamily="@font/sf_pro_display_700"
                        android:gravity="center"
                        android:text="@string/ok"
                        android:textColor="#FFFFFF"
                        app:autoSizeMaxTextSize="22sp"
                        app:autoSizeMinTextSize="1sp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="159:24"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.puddy.board.ui.custom.ScalableCardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/sf_pro_display_700"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="#000000"
                app:autoSizeMaxTextSize="22sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="159:24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.441666666"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.92"
                bind:ignore="TooManyViews" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.gg.osto.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="viewModel"
            type="com.gg.osto.ui.crop.CropViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#414956">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="360:777">

            <com.gg.osto.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="328:506"
                app:layout_constraintWidth_percent="0.9111"
                app:layout_constraintVertical_bias="0.17343"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                scaleType="@{com.gg.osto.ui.custom.ScalableCardView.ScaleType.BY_WIDTH}"
                scalableCornerRadius="@{0.06f}">
                <com.isseiaoki.simplecropview.CropImageView
                    android:id="@+id/cropView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    image="@{viewModel.imageUri}"
                    app:scv_background_color="@android:color/transparent"
                    app:scv_crop_mode="free"
                    app:scv_frame_color="@android:color/white"
                    app:scv_guide_color="@android:color/white"
                    app:scv_handle_color="#FFFFFF"
                    app:scv_overlay_color="#B2072034"
                    android:background="#072034"/>
            </com.gg.osto.ui.custom.ScalableCardView>

            <com.gg.osto.ui.custom.ScalableCardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="156:52"
                app:layout_constraintWidth_percent="0.4333"
                app:layout_constraintVertical_bias="0.817931"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                scaleType="@{ScaleType.BY_HEIGHT}"
                scalableCornerRadius="@{0.5f}"
                android:onClick="@{(_) -> viewModel.cropImage(cropView)}">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    setAppGradientBackground="@{true}">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="156:22"
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="1sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/roboto_100"
                        android:text="@string/ok"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.gg.osto.ui.custom.ScalableCardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_100"
                android:gravity="center"
                android:text="@string/cancel"
                setAppGradientText="@{true}"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="156:22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.4333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.9128" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

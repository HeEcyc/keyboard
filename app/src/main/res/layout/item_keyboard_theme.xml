<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="com.gg.osto.ui.custom.ScalableCardView.ScaleType"/>
        <variable
            name="item"
            type="com.gg.osto.data.KeyboardTheme" />
    </data>

    <com.gg.osto.ui.custom.ScalableCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="0sp"
        scaleType="@{ScaleType.BY_HEIGHT}"
        scalableCornerRadius="@{0.0469f}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="328:213">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:src="@drawable/toolbar"
                    app:layout_constraintDimensionRatio="1:0.104"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    color="@{item.backgroundColor}"
                    image="@{item.backgroundImagePath}"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/toolbar" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/keyboard"
                    previewTheme="@{item}"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:layout_constraintBottom_toBottomOf="parent"/>

<!--            <androidx.appcompat.widget.AppCompatImageView-->
